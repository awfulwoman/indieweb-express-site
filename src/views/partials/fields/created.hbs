<div class="c-form-row {{#if errors.created}}c-form-row--error{{/if}}">
  <label for="created" class="c-form-title">Date created</label>
  <input 
  type="text" 
  id="created" 
  name="created" 
  class="c-form-texty {{#if errors.created}}c-form-texty--error{{/if}}"
  value="{{state.created}}"
  >
  {{#if errors.created}}
    <p class="comp-error">ERROR! {{errors.created}}</p>
  {{/if}}
</div>
