<div class="c-form-row" {{#if errors.strapline}}c-form-row--error{{/if}}>
  <label for="strapline" class="c-form-title">Strapline</label>
  <input 
  type="text" 
  id="strapline" 
  name="strapline" 
  class="c-form-texty {{#if errors.strapline}}c-form-texty--error{{/if}}"
  value="{{state.strapline}}"
  >
  {{#if errors.strapline}}
    <p class="comp-error">ERROR! {{errors.strapline}}</p>
  {{/if}}
</div>
