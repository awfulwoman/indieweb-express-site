<article class="h-entry">
  <h1 class="c-page-title p-name">{{data.title}}</h1>

  {{#if scraped}}
  <img class="comp-siteimage"  src="/bookmarks/{{storageId}}/f/{{scraped.image.filename}}/600" width="{{scraped.image.width}}" height="{{scraped.image.height}}" alt="">
  {{/if}}

  <div class="comp-bookmark e-content">
    {{{extended.content.html}}}
  </div>

  {{#if data.bookmark_of}}
  <p>
    <a href="{{data.bookmark_of}}"
      class="u-bookmark-of {{#if data.add_like}}u-like-of {{/if}}comp-button comp-button--primary">Visit bookmarked
      URL</a><span class="util-sr-only">.</span>
  </p>
  {{/if}}

  {{> author}}

  {{> twitter}}

  {{> syndications}}
  {{> tags}}
  {{> edit}}
  {{> bridgy}}
</article>
