{{#if debug}}

<div class="l-debug">
  <h1>Handlebars template debugging 🐜 </h1>

  {{#if id}}
  <h2>ID</h2>
  <pre class="hljs"><code>{{{dumpObject id}}}</code></pre>
  {{/if}}

  {{#if storage}}
  <h2>Storage</h2>
  <pre class="hljs"><code>{{{dumpObject storage}}}</code></pre>
  {{/if}}

  {{#if data}}
  <h2>Data</h2>
  <pre class="hljs"><code>{{{dumpObject data}}}</code></pre>
  {{/if}}

  {{#if content}}
  <h2>Content</h2>
  <pre class="hljs"><code>{{{dumpObject content}}}</code></pre>
  {{/if}}

  {{#if sections}}
  <h2>Sections</h2>
  <pre class="hljs"><code>{{{dumpObject sections}}}</code></pre>
  {{/if}}

  {{#if children}}
  <h2>Children</h2>
  <pre class="hljs"><code>{{{dumpObject children}}}</code></pre>
  {{/if}}

  {{#if raw}}
  <h2>raw</h2>
  <pre class="hljs"><code>{{{dumpObject raw}}}</code></pre>
  {{/if}}
</div>
{{/if}}
