


{{#eq this.formFieldRenderType 'text'}}
<div class="c-form-row {{#if this.errorMessages}}c-form-row--error{{/if}}">
  <label for="{{this.fieldId}}" class="c-form-title">{{this.fieldTitle}}</label>
  <input type="text" id="{{this.fieldId}}" name="{{this.fieldId}}" class="c-form-texty"
    value="{{this.savedFieldValue}}" {{#if this.required}}required{{/if}}>
  {{#if this.errorMessages}}
  <ul>
    {{#each this.errorMessages}}
    <li class="c-errormsg">{{this}}</li>
    {{/each}}
  </ul>
  {{/if}}
</div>
{{/eq}}


