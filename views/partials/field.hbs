{{#eq this.formFieldRenderType 'boolean'}}

<div class="c-form-row {{#if this.errorMessages}}c-form-row--error{{/if}}">
  <p class="c-form-title">{{this.fieldTitle}}</p>
  <div class="c-checkbox-group">
    <input type="radio" value="true" id="{{this.fieldId}}True" name="{{this.fieldId}}" 
      {{#if this.savedFieldValue}}
        {{#eq this.saveFieldValue true}}
          checked="checked"
        {{/eq}}
      {{else}}
        {{#eq this.fieldDefaultValueGenerator true}}
          checked="checked"
        {{/eq}}
      {{/if}}>
      <label for="{{this.fieldId}}True">Yes {{#eq this.fieldDefaultValueGenerator true}}(Default for {{scaffold.englishPlural}}){{/eq}}</label>
      </div>
      <div>
    <input type="radio" value="false" id="{{this.fieldId}}False" name="{{this.fieldId}}" 
      {{#if this.savedFieldValue}}
        {{#eq this.saveFieldValue false}}
          checked="checked"
        {{/eq}}
      {{else}}
        {{#eq this.fieldDefaultValueGenerator false}}
          checked="checked"
        {{/eq}}
      {{/if}}>
      <label for="{{this.fieldId}}False">No {{#eq this.fieldDefaultValueGenerator false}}(Default for {{scaffold.englishPlural}}){{/eq}}</label>
  </div>
</div>
{{/eq}}
