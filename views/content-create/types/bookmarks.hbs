<h1>Create a new bookmark</h1>

<p>Link to something interesting.</p>

<form method="POST" class="c-form">

  {{> fields/title}}
  {{> fields/bookmark-of}}
  {{> fields/tags}}

  <details class="c-collapse">
    <summary class="c-title">Optional</summary>
    <div class="c-revealed">
      {{> fields/content}}
    </div>
  </details>

  <details class="c-collapse">
    <summary class="c-title">Meta</summary>
    <div class="c-revealed">
      {{> fields/privacy}}
      {{> fields/feed}}
      {{> fields/index}}
      {{> fields/created}}
      {{> fields/modified}}
      {{> fields/uuid}}
    </div>
  </details>

  <div class="c-form-row">
    <button class="c-button c-button--primary">Create a new bookmark!</button>
  </div>

</form>
