<h1>{{data.title}}</h1>

{{{content}}}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>



<form method="POST" class="c-form">

  {{> fields/content }}
  {{> fields/tags}}

  <details class="comp-reveal">
    <summary class="comp-reveal-title">Place</summary>
    <div class="comp-reveal-content">
      {{> fields/place}}
    </div>
  </details>

  <details class="comp-reveal">
    <summary class="comp-reveal-title">Meta</summary>
    <div class="comp-reveal-content">
      {{> fields/privacy}}
      {{> fields/feed}}
      {{> fields/index}}
      {{> fields/created}}
      {{> fields/modified}}
      {{> fields/uuid}}
    </div>
  </details>

  <details class="comp-reveal">
    <summary class="comp-reveal-title">Optional</summary>
    <div class="comp-reveal-content">
      {{> fields/title}}
    </div>
  </details>

  <div class="c-form-row">
    <button class="comp-button comp-button--primary">Create a new note!</button>
  </div>

</form>

<script async>
  var simplemde = new SimpleMDE({
    element: document.getElementById('content')
  });
</script>
