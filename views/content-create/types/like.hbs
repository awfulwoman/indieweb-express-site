<h1>Create a new like</h1>

<p>Like it, love it, lick it.</p>

<form method="POST" class="c-form">

  {{> fields/title}}
  {{> fields/like-of}}
  {{> fields/tags}}

  <details>
    <summary>Optional</summary>
    {{> fields/content}}
  </details>

  <details>
    <summary>Meta</summary>
    {{> fields/privacy}}
    {{> fields/feed}}
    {{> fields/index}}
  </details>

  <div class="c-form-row">
    <button class="c-button c-button--primary">Create a new like!</button>
  </div>

</form>
