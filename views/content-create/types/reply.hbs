<h1>{{data.title}}</h1>

{{{content}}}

<form method="POST" class="c-form">

  {{> fields/reply-to}}
  {{> fields/content}}
  {{> fields/add-like}}

  <details class="comp-reveal">
    <summary class="comp-reveal-title">Meta</summary>
    <div class="comp-reveal-content">
      {{> fields/privacy}}
      {{> fields/feed}}
      {{> fields/index}}
      {{> fields/created}}
      {{> fields/modified}}
      {{> fields/guid}}
    </div>
  </details>

  {{> fields/syndication}}

  <div class="c-form-row">
    <button class="comp-button comp-button--primary">Save</button>
  </div>

</form>
