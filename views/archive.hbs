<h1>{{data.title}}</h1>


{{{content}}}


{{#if children}}
  <section>
    <h2>Related nodes</h2>
    <ul>
      {{#each children}}
      <li><a href="/{{this.dir}}/{{#if this.data.slug}}{{this.data.slug}}{{else}}{{this.id}}{{/if}}">{{this.data.title}}</a> - {{date this.data.created "dddd Do MMMM, YYYY"}}</li>
      {{/each}}
    </ul>
  </section>
{{/if}}
