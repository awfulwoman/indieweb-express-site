<article class="h-entry">

  <h1 class="c-page-title p-name">{{data.title}}</h1>

  <p>Written by <a class="p-author h-card" href="https://whalecoiner.com">Charlie</a> on <time class="dt-published" datetime="{{data.created}}">{{date data.created "dddd Do MMMM, YYYY"}}</time></p>

  {{>strapline value=data.strapline}}

  <div class="c-post e-content">
    {{{content}}}

    {{#if sections}}
      {{#each sections}}
      {{>section id=../id storage=../storage data=this.data content=this.content}}
      {{/each}}
    {{/if}}
  </div>

  <div class="p-bridgy-twitter-content u-bridgy-omit-link">
    Long form is the new short form.
  </div>

  {{> tags}}
  {{> edit}}

</article>
